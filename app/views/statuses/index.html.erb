<p id="notice"><%= notice %></p>

<h1>Todos los estados</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr class="status">
        <td><%= status.name %></td>
        <td><%= status.content %></td>
        <td class="admin">
       
        <%= link_to "Hace: "  + time_ago_in_words(status.created_at), status%> </td>
        <td><%= link_to 'Editar', edit_status_path(status) %></td>
        <td><%= link_to 'Borrar', status, method: :delete, data: { confirm: 'Â¿Seguro que quieres borrar este estado?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo estado', new_status_path, :class => "btn btn-primary"%>

